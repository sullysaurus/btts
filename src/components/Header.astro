<section 
    class="bg-cover bg-center bg-no-repeat relative pt-24 md:pt-32 pb-2 md:pb-24" 
    style="background-image: url('/stars.jpg');"
>
    {/* Overlay */}
    <div class="absolute inset-0 bg-black/60"></div>

    {/* Content */}
    <div class="relative z-10">
        <div class="container mx-auto px-4">
            <div class="max-w-5xl mx-auto">
                {/* Main Content */}
                <div class="space-y-6 md:space-y-10">
                    {/* Centered Image */}
                    <div class="relative group">
                        <img 
                            src="/band.jpg" 
                            alt="Band photo" 
                            class="w-full aspect-[16/9] object-cover rounded-2xl shadow-2xl"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    </div>

                    {/* Centered Text */}
                    <div class="text-center space-y-3">
                        <h1 class="text-white text-3xl md:text-4xl font-light tracking-wide">Back To The Start</h1>
                        <p class="text-white/90 text-xl font-light tracking-wide">A Tribute to Coldplay</p>
                        <div class="flex items-center justify-center gap-4 mt-2">
                            <span class="h-[1px] w-12 bg-white/20"></span>
                            <p class="text-white/60 tracking-[0.25em] text-sm font-light">2000-2005</p>
                            <span class="h-[1px] w-12 bg-white/20"></span>
                        </div>
                    </div>

                    {/* Centered Buttons */}
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a 
                            href="#contact" 
                            class="group relative overflow-hidden rounded-full bg-white/10 hover:bg-white/20 transition-all duration-500 backdrop-blur-sm"
                        >
                            <span class="relative flex items-center justify-between px-8 py-4">
                                <span class="text-white font-light tracking-wider">Book Now</span>
                                <i class="fas fa-arrow-right ml-3 transform group-hover:translate-x-1 transition-transform duration-300"></i>
                            </span>
                        </a>
                        <a 
                            href="/press-kit.pdf" 
                            class="group relative overflow-hidden rounded-full border border-white/20 hover:border-white/40 transition-all duration-500"
                        >
                            <span class="relative flex items-center justify-between px-8 py-4">
                                <span class="text-white/90 group-hover:text-white transition-colors font-light tracking-wider">Press Kit</span>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
