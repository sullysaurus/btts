---
const tourDates = [
  { date: 'July 5, 2025', venue: 'Private Party', location: 'Rocky Mount, NC' },
  { date: 'August 9, 2025', venue: 'Private Party', location: 'Raleigh, NC' },
  {
    date: 'Sept 27, 2025',
    venue: 'The Porch at Iconostar',
    location: 'Wilson, NC',
  },
  {
    date: 'Oct 10, 2025',
    venue: 'Lincoln Theatre',
    location: 'Raleigh, NC',
    tickets: 'https://lincolntheatre.com/event/the-breakfast-club-80s-party-band-w-back-to-the-start-coldplay-tribute/lincoln-theatre/raleigh-north-carolina/'
  },
];
---

<section id="shows" class="py-16 px-4" data-name="tour-dates-section">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold mb-12 text-center">TOUR DATES</h2>
    <div class="space-y-4" data-name="tour-dates-list">
      {
        tourDates.map(show => (
          <div
            class="tour-date flex flex-col md:flex-row justify-between items-center p-6 border-b border-gray-200"
            data-name="tour-date-item"
          >
            <div class="md:w-1/4 text-xl mb-4 md:mb-0">{show.date}</div>
            <div class="md:w-1/4 text-xl mb-4 md:mb-0">{show.venue}</div>
            <div class="md:w-1/4 text-xl mb-4 md:mb-0">{show.location}</div>
            {show.tickets ? (
              <a
                href={show.tickets}
                target="_blank"
                rel="noopener noreferrer"
                class="border-2 border-black px-6 py-2 hover:bg-black hover:text-white transition-colors inline-block"
                data-name="tickets-button"
              >
                Tickets
              </a>
            ) : (
              <button
                class="border-2 border-gray-400 px-6 py-2 text-gray-400 cursor-not-allowed"
                data-name="tickets-button"
                disabled
              >
                Tickets
              </button>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>

