---
// Tour Dates component with modern angled design
---

<section id="tour" class="relative w-full bg-black overflow-hidden">
  <!-- Angled background transition -->
  <div class="absolute inset-0 bg-gradient-to-b from-black via-black to-blue-500/5"></div>
  <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-black to-transparent z-10"></div>

  <!-- Diagonal accent stripe -->
  <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-br from-blue-500/10 via-purple-500/10 to-transparent transform skew-x-12 translate-x-1/4"></div>

  <div class="relative z-10 py-24 md:py-40">
    <div class="container mx-auto px-6 md:px-12">
      <div class="max-w-6xl mx-auto">

        <!-- Section Header - Bold & Offset -->
        <div class="mb-16 md:mb-24">
          <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-8">
            <div class="space-y-6">
              <div class="flex items-center gap-4">
                <div class="h-1 w-16 bg-gradient-to-r from-yellow-400 to-yellow-300 rounded-full"></div>
                <span class="text-sm text-yellow-400 font-bold uppercase tracking-widest">Live Shows</span>
              </div>
              <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight leading-none">
                Catch Us<br class="md:hidden"/> Live
              </h2>
            </div>
            <p class="text-lg md:text-xl text-white/60 font-light max-w-md">
              Experience the early Coldplay era brought to life on stage
            </p>
          </div>
        </div>

        <!-- Band Hero Image -->
        <div class="mb-16 md:mb-20">
          <div class="relative group overflow-hidden rounded-3xl shadow-2xl">
            <img
              src="/band-header.PNG"
              alt="Back To The Start performing live on stage"
              width="1920"
              height="1080"
              loading="lazy"
              class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-transparent opacity-50"></div>
          </div>
        </div>

        <!-- Widget Container - Modern Card Design -->
        <div class="tour-dates-widget-container">
          <div class="tour-dates-widget">
            <script is:inline charset="utf-8" src="https://widgetv3.bandsintown.com/main.min.js"></script>
            <a class="bit-widget-initializer"

              data-artist-name="id_4423955"

              data-events-to-display=""
              data-background-color="rgba(0,0,0,0)"
              data-separator-color="rgba(255,255,255,0.08)"
              data-text-color="rgba(255,255,255,0.95)"
              data-font="system-ui, -apple-system, sans-serif"
              data-auto-style="false"

              data-button-label-capitalization="uppercase"
              data-header-capitalization="uppercase"
              data-location-capitalization="capitalize"
              data-venue-capitalization="normal"
              data-display-local-dates="true"
              data-local-dates-position="tab"
              data-display-past-dates="false"
              data-display-details="false"
              data-display-lineup="false"
              data-display-start-time="true"
              data-social-share-icon="false"
              data-display-limit="all"

              data-date-format="MMM. D, YYYY"
              data-date-orientation="horizontal"
              data-date-border-color="rgba(255,255,255,0)"
              data-date-border-width="0px"
              data-date-capitalization="uppercase"
              data-date-border-radius="0px"

              data-event-ticket-cta-size="medium"
              data-event-custom-ticket-text=""
              data-event-ticket-text="GET TICKETS"
              data-event-ticket-icon="false"
              data-event-ticket-cta-text-color="rgba(0,0,0,1)"
              data-event-ticket-cta-bg-color="rgba(250,204,21,1)"
              data-event-ticket-cta-border-color="rgba(250,204,21,1)"
              data-event-ticket-cta-border-width="0px"
              data-event-ticket-cta-border-radius="999px"

              data-sold-out-button-text-color="rgba(255,255,255,0.4)"
              data-sold-out-button-background-color="rgba(255,255,255,0.05)"
              data-sold-out-button-border-color="rgba(255,255,255,0.1)"
              data-sold-out-button-clickable="false"

              data-event-rsvp-position="left"
              data-event-rsvp-cta-size="medium"
              data-event-rsvp-only-show-icon="false"
              data-event-rsvp-text="NOTIFY ME"
              data-event-rsvp-icon="false"
              data-event-rsvp-cta-text-color="rgba(0,0,0,1)"
              data-event-rsvp-cta-bg-color="rgba(250,204,21,1)"
              data-event-rsvp-cta-border-color="rgba(250,204,21,1)"
              data-event-rsvp-cta-border-width="0px"
              data-event-rsvp-cta-border-radius="999px"

              data-follow-section-position="top"
              data-follow-section-alignment="center"
              data-follow-section-header-text=""
              data-follow-section-cta-size="medium"
              data-follow-section-cta-text="FOLLOW"
              data-follow-section-cta-icon="false"
              data-follow-section-cta-text-color="rgba(0,0,0,1)"
              data-follow-section-cta-bg-color="rgba(255,255,255,1)"
              data-follow-section-cta-border-color="rgba(255,255,255,1)"
              data-follow-section-cta-border-width="0px"
              data-follow-section-cta-border-radius="999px"

              data-play-my-city-position="bottom"
              data-play-my-city-alignment="center"
              data-play-my-city-header-text="Don't see a show near you?"
              data-play-my-city-cta-size="medium"
              data-play-my-city-cta-text="REQUEST A SHOW"
              data-play-my-city-cta-icon="false"
              data-play-my-city-cta-text-color="rgba(255,255,255,1)"
              data-play-my-city-cta-bg-color="rgba(0,0,0,0)"
              data-play-my-city-cta-border-color="rgba(255,255,255,0.3)"
              data-play-my-city-cta-border-width="2px"
              data-play-my-city-cta-border-radius="999px"

              data-optin-font=""
              data-optin-text-color=""
              data-optin-bg-color=""
              data-optin-cta-text-color=""
              data-optin-cta-bg-color=""
              data-optin-cta-border-width=""
              data-optin-cta-border-radius=""
              data-optin-cta-border-color=""

              data-language="en"
              data-layout-breakpoint="900"
              data-app-id=""
              data-affil-code=""
              data-bit-logo-position="bottomRight"
              data-bit-logo-color="rgba(255,255,255,0.2)"

            ></a>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<style is:global>
  /* Tour Dates Widget - Modern Card Design */
  .tour-dates-widget-container {
    position: relative;
  }

  .tour-dates-widget-container::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, rgba(59,130,246,0.2), rgba(147,51,234,0.2));
    border-radius: 32px;
    opacity: 0.5;
    z-index: -1;
    filter: blur(20px);
  }

  .tour-dates-widget {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0.01) 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 28px;
    padding: 2.5rem;
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
  }

  .tour-dates-widget::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(59,130,246,0.3), rgba(147,51,234,0.3), transparent);
  }

  /* Follow section - Elevated design */
  .bit-widget .bit-follow-section {
    background: linear-gradient(135deg, rgba(59,130,246,0.08) 0%, rgba(147,51,234,0.08) 100%) !important;
    border-radius: 20px !important;
    padding: 2.5rem !important;
    margin-bottom: 3rem !important;
    border: 1px solid rgba(59,130,246,0.15) !important;
    position: relative;
  }

  .bit-widget .bit-follow-section::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 20px;
    padding: 1px;
    background: linear-gradient(135deg, rgba(59,130,246,0.3), rgba(147,51,234,0.3));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .bit-widget .bit-follow-section-text {
    font-size: 1rem !important;
    letter-spacing: 0.02em !important;
    margin-bottom: 1.5rem !important;
    font-weight: 500 !important;
  }

  /* Event cards - Premium design */
  .bit-widget .bit-event {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.04) 0%, rgba(255, 255, 255, 0.01) 100%) !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 18px !important;
    padding: 2rem !important;
    margin-bottom: 1.25rem !important;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
    position: relative;
    overflow: hidden;
  }

  .bit-widget .bit-event::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59,130,246,0.05), rgba(147,51,234,0.05), transparent);
    transition: left 0.6s ease;
  }

  .bit-widget .bit-event:hover {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.06) 0%, rgba(255, 255, 255, 0.02) 100%) !important;
    border-color: rgba(59,130,246,0.3) !important;
    transform: translateY(-4px) scale(1.01);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3), 0 0 0 1px rgba(59,130,246,0.1);
  }

  .bit-widget .bit-event:hover::before {
    left: 100%;
  }

  /* Date styling - Bold emphasis */
  .bit-widget .bit-event-date {
    font-weight: 800 !important;
    font-size: 0.875rem !important;
    letter-spacing: 0.08em !important;
    margin-bottom: 0.75rem !important;
    color: rgba(250,204,21,0.9) !important;
    text-transform: uppercase;
  }

  /* Location and venue - Refined hierarchy */
  .bit-widget .bit-event-location {
    font-size: 1.125rem !important;
    line-height: 1.6 !important;
    font-weight: 600 !important;
    margin-bottom: 0.25rem !important;
  }

  .bit-widget .bit-event-venue {
    font-size: 0.95rem !important;
    opacity: 0.65 !important;
    line-height: 1.5 !important;
  }

  /* Button improvements - Premium interaction */
  .bit-widget button,
  .bit-widget a[role="button"] {
    font-weight: 700 !important;
    letter-spacing: 0.08em !important;
    padding: 0.875rem 2.5rem !important;
    font-size: 0.875rem !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    position: relative;
    overflow: hidden;
  }

  .bit-widget button::before,
  .bit-widget a[role="button"]::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.2), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .bit-widget button:hover,
  .bit-widget a[role="button"]:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 12px 32px rgba(250, 204, 21, 0.4), 0 0 0 1px rgba(250,204,21,0.5);
  }

  .bit-widget button:hover::before,
  .bit-widget a[role="button"]:hover::before {
    opacity: 1;
  }

  .bit-widget button:active,
  .bit-widget a[role="button"]:active {
    transform: translateY(0) scale(1.02);
  }

  /* Play My City section - Refined call-to-action */
  .bit-widget .bit-play-my-city-section {
    margin-top: 3rem !important;
    padding-top: 2.5rem !important;
    border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
    position: relative;
  }

  .bit-widget .bit-play-my-city-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(59,130,246,0.5), rgba(147,51,234,0.5), transparent);
  }

  .bit-widget .bit-play-my-city-text {
    font-size: 1.125rem !important;
    margin-bottom: 1.5rem !important;
    font-weight: 600 !important;
    letter-spacing: 0.01em !important;
  }

  /* Tab styling - Clean navigation */
  .bit-widget .bit-dates-tab {
    font-size: 0.875rem !important;
    font-weight: 700 !important;
    padding: 0.625rem 1.25rem !important;
    letter-spacing: 0.05em !important;
    transition: all 0.3s ease !important;
  }

  .bit-widget .bit-dates-tab:hover {
    background: rgba(255,255,255,0.05) !important;
  }

  /* Remove extra spacing */
  .bit-widget > div {
    padding: 0 !important;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .tour-dates-widget {
      padding: 1.75rem;
      border-radius: 24px;
    }

    .bit-widget .bit-event {
      padding: 1.5rem !important;
      border-radius: 16px !important;
    }

    .bit-widget .bit-follow-section {
      padding: 2rem !important;
      border-radius: 16px !important;
    }
  }
</style>
