---
// Astro component script section
---

<footer id="contact" class="bg-black text-white py-24">
    <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-4xl font-bold mb-16 text-center">GET IN TOUCH</h2>
            
            <div class="grid md:grid-cols-2 gap-16">
                {/* Contact Info Column */}
                <div class="space-y-8">
                    <div>
                        <h3 class="text-2xl mb-4 font-light">Contact Us</h3>
                        <p class="text-lg opacity-80">
                            For bookings and inquiries:<br />
                            <a href="mailto:contact@backtothestart.band" class="hover:opacity-75 transition-opacity">
                                contact@backtothestart.band
                            </a>
                        </p>
                    </div>
                    
                    <div class="space-y-4">
                        <h3 class="text-2xl font-light">Follow Us</h3>
                        <div class="flex gap-6" data-name="social-links">
                            <a href="https://www.instagram.com/backtothestart.band" class="hover:opacity-75 transition-opacity text-3xl" aria-label="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="https://www.facebook.com" class="hover:opacity-75 transition-opacity text-3xl" aria-label="Instagram">
                                <i class="fab fa-facebook"></i>
                            </a>
                            <a href="https://www.tiktok.com/@backtothestart.band" class="hover:opacity-75 transition-opacity text-3xl" aria-label="TikTok">
                                <i class="fab fa-tiktok"></i>
                            </a>
                        </div>
                    </div>
                </div>

                {/* Contact Form Column */}
                <form 
                    name="contact"
                    method="POST"
                    data-netlify="true"
                    netlify-honeypot="bot-field"
                    class="space-y-6"
                >
                    {/* Hidden field for spam protection */}
                    <p class="hidden">
                        <label>
                            Don't fill this out if you're human: <input name="bot-field" />
                        </label>
                    </p>

                    {/* Hidden field for form name */}
                    <input type="hidden" name="form-name" value="contact" />
                    <input type="hidden" name="redirect" value="/thank-you" />

                    <div>
                        <label for="name" class="block text-sm font-medium mb-2">Name</label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:border-white/40 transition-colors"
                            required
                        />
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium mb-2">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:border-white/40 transition-colors"
                            required
                        />
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-medium mb-2">Message</label>
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:border-white/40 transition-colors"
                            required
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full px-6 py-3 border-2 border-white hover:bg-white hover:text-black transition-colors rounded-lg text-lg font-medium"
                    >
                        Send Message
                    </button>
                </form>
            </div>

            <div class="mt-16 pt-8 border-t border-white/20 text-center">
                <p class="text-sm opacity-70" data-name="copyright">
                    Â© 2025 Back To The Start
                </p>
            </div>
        </div>
    </div>
</footer> 