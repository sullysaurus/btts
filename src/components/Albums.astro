---
const albums = [
  {
    title: 'Parachutes',
    year: '2000',
    image: '/parachutes.jpeg',
    description: "Coldplay's debut album, characterized by its intimate acoustic sound and raw emotional honesty.",
  },
  {
    title: 'A Rush of Blood to the Head',
    year: '2002',
    image: '/rush.jpeg',
    description: 'A darker, more ambitious follow-up that established Coldplay as a global force in rock music.',
  },
  {
    title: 'X&Y',
    year: '2005',
    image: '/xy.jpg',
    description: "The band's most electronic and experimental work of their early period, blending atmospheric soundscapes with anthemic rock.",
  },
];
---

<section
  id="albums"
  class="relative bg-cover bg-center bg-fixed py-20"
  style="background-image: url('/stars.jpg');"
>
  {/* Overlay */}
  <div class="absolute inset-0 bg-black/60"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-6xl mx-auto">

      {/* Title */}
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
          The Albums
        </h2>
        <p class="text-xl text-white/70">
          Three albums that defined a generation
        </p>
      </div>

      {/* Albums Grid */}
      <div class="grid md:grid-cols-3 gap-8 items-stretch">
        {albums.map((album) => (
          <div class="group flex">
            <div class="glass-card rounded-3xl overflow-hidden backdrop-blur-xl bg-white/5 border border-white/10 hover:border-white/30 transition-all duration-500 hover:scale-105 hover:shadow-2xl flex flex-col w-full">

              {/* Album Cover */}
              <div class="aspect-square overflow-hidden">
                <img
                  src={album.image}
                  alt={album.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
              </div>

              {/* Info */}
              <div class="p-6 space-y-3 flex-1 flex flex-col">
                <div>
                  <h3 class="text-2xl font-bold text-white">
                    {album.title}
                  </h3>
                  <p class="text-white/60 text-lg">
                    {album.year}
                  </p>
                </div>
                <p class="text-white/80 text-sm leading-relaxed flex-1">
                  {album.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .glass-card {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
  }
</style>
