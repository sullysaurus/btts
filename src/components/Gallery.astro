<section id="gallery" class="py-16 px-4" data-name="gallery-section">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">GALLERY</h2>
        <div class="grid md:grid-cols-3 gap-4" data-name="gallery-grid">
            {images.map((image) => (
                <div class="overflow-hidden" data-name="gallery-item">
                    <img 
                        src={image.url} 
                        alt={image.caption}
                        class="gallery-image w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
                    />
                    <p class="mt-2 text-sm text-center">{image.caption}</p>
                </div>
            ))}
        </div>
    </div>
</section> 