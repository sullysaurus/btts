<section id="music" class="relative w-full bg-black overflow-hidden">
  <!-- Background gradient -->
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(120,119,198,0.06),rgba(0,0,0,0)_70%)]"
  >
  </div>

  <div class="relative z-10">
    <div class="container mx-auto px-6 md:px-12 py-20 md:py-32">
      <div class="max-w-7xl mx-auto">

        {/* Header */}
        <div class="mb-12 md:mb-16 text-center">
          <div class="inline-block mb-4">
            <div class="h-1 w-20 bg-gradient-to-r from-yellow-400 to-yellow-300 rounded-full mx-auto"></div>
          </div>
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white tracking-tight leading-tight mb-6">
            Experience Our Music
          </h2>
          <p class="text-xl md:text-2xl text-white/60 font-light max-w-3xl mx-auto">
            Immerse yourself in the sound that defined a generation
          </p>
        </div>

        {/* Video Container */}
        <div class="max-w-5xl mx-auto">
          <div class="relative group overflow-hidden rounded-2xl shadow-2xl">
            {/* Video Element */}
            <video
              src="/music.mp4"
              controls
              playsinline
              preload="metadata"
              class="w-full h-auto"
              poster="/band-stage-2.PNG"
            >
              Your browser does not support the video tag.
            </video>

            {/* Subtle overlay on hover */}
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
          </div>

          {/* Caption/Description below video */}
          <div class="mt-8 text-center space-y-4">
            <p class="text-lg md:text-xl text-white/70 leading-relaxed">
              Watch us bring Coldplay's early classics to life with authentic sound and passionate performance.
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
