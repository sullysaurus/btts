---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You | Back To The Start">
    <section 
        class="min-h-screen bg-cover bg-center bg-fixed bg-no-repeat flex items-center justify-center py-12 md:py-24 relative"
        style="background-image: url('/stars.jpg');"
    >
        {/* Overlay */}
        <div class="absolute inset-0 bg-black/60"></div>

        {/* Content */}
        <div class="relative z-10 container mx-auto px-4">
            <div class="max-w-2xl mx-auto text-center space-y-8">
                {/* Thank You Message */}
                <h1 class="text-4xl md:text-5xl font-light text-white tracking-wide">
                    Thank You
                </h1>
                <p class="text-xl text-white/80 font-light">
                    We'll get back to you as soon as possible.
                </p>

                {/* Centered Gif */}
                <div class="relative rounded-2xl overflow-hidden shadow-2xl max-w-[400px] mx-auto">
                    <img 
                        src="/chris.gif" 
                        alt="Chris Martin Thank You" 
                        class="w-full"
                    />
                </div>

                {/* Return Home Button */}
                <div class="pt-8">
                    <a 
                        href="/" 
                        class="inline-block px-8 py-4 rounded-full bg-white/10 hover:bg-white/20 text-white font-light tracking-wider transition-all duration-300 backdrop-blur-sm"
                    >
                        Return Home
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
